{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "short_description": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "is_published": {
      "type": "boolean",
      "default": false
    },
    "read_time": {
      "type": "string"
    },
    "clerk_user_id": {
      "type": "text",
      "required": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "posts"
    },
    "is_paid": {
      "type": "boolean",
      "default": false
    }
  }
}
